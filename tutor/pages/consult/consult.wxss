.consult-container {
  padding: 40rpx;
}

.consult-card {
  background: white;
  border-radius: 24rpx;
  padding: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.consult-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 20rpx;
}

.consult-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 50rpx;
}

.qr-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.qr-hint {
  font-size: 24rpx;
  color: #999;
}

.notice-box {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}