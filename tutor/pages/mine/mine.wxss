.profile-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  margin-bottom: 20rpx;
}

.login-prompt {
  text-align: center;
}

.login-text {
  display: block;
  color: white;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.login-btn {
  background: white;
  color: #667eea;
  border-radius: 50rpx;
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.profile-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-name {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
}

.menu-section {
  background: white;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
}

.favorites-section {
  background: white;
  padding: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.favorite-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.favorite-item:last-child {
  border-bottom: none;
}

.favorite-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.favorite-info {
  flex: 1;
}

.favorite-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.favorite-subject {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.favorite-fee {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 600;
}